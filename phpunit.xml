<?xml version="1.0" encoding="UTF-8"?>
<phpunit	
		 backupGlobals="false"
		 backupStaticAttributes="false"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 processIsolation="false"
		 stopOnError="false"
		 stopOnFailure="false"
		 stopOnIncomplete="false"
		 stopOnSkipped="false"
		 syntaxCheck="false"
		 verbose="true"
		 strict="true"
		 bootstrap="travis/tests/bootstrap.php">
	<testsuites>
		<testsuite name="Easy Digital Downloads Test Suite">
			<directory suffix="Test.php">./travis/tests</directory>
			<exclude>travis/tests/AJAX.Test.php</exclude>
		</testsuite>
	</testsuites>
	 <filter>
        	<whitelist addUncoveredFilesFromWhitelist="true">
           	 	<directory suffix=".php">./assets</directory>
           	 	<directory suffix=".php">./includes</directory>
           	 	<directory suffix=".php">./templates</directory>
           	 	<file>easy-digital-downloads.php</file>
           	 	<file>uninstall.php</file>
		</whitelist>
   	 </filter>
   	 <logging>
        	<log type="coverage-clover" target="./travis/clover.xml"/>
   	 </logging>
</phpunit>
