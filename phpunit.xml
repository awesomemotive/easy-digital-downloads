<?xml version="1.0" encoding="UTF-8"?>
<phpunit	
		 backupGlobals="false"
		 backupStaticAttributes="false"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 processIsolation="false"
		 stopOnError="false"
		 stopOnFailure="false"
		 stopOnIncomplete="false"
		 stopOnSkipped="false"
		 syntaxCheck="false"
		 verbose="false"
		 strict="true"
		 bootstrap="travis/includes/bootstrap.php">
	<testsuites>
		<testsuite name="Easy Digital Downloads Test Suite">
			<directory suffix="Test.php">./tests/unit-tests</directory>
			<exclude>tests/unit-tests/AJAX.Test.php</exclude>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-clover" target="./travis/clover.xml"/>
	</logging>
</phpunit>
